{
  "name": "stash-it",
  "version": "0.1.0",
  "description": "Firefox extension for stashing code snippets and links - your personal snippet haven",
  "scripts": {
    "lint": "web-ext lint",
    "build": "npm run package",
    "package": "web-ext build --overwrite-dest",
    "package:source": "npm run package:source:clean && zip -r ../stash-it-source.zip . -x '*.git*' 'node_modules/*' 'web-ext-artifacts/*'",
    "package:source:clean": "rm -f ../stash-it-source.zip",
    "start": "web-ext run --start-url https://json.org/example.html",
    "sign": "web-ext sign --api-key=$WEB_EXT_API_KEY --api-secret=$WEB_EXT_API_SECRET",
    "test": "web-ext lint",
    "commit": "npx zx tools/commit-changes.mjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rikurb8/browser-formatted-viewer.git"
  },
  "keywords": [
    "firefox",
    "extension",
    "json",
    "xml",
    "formatter",
    "syntax-highlighting",
    "webextension"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "web-ext": "^8.3.0"
  },
  "webExt": {
    "sourceDir": ".",
    "artifactsDir": "./web-ext-artifacts",
    "ignoreFiles": [
      ".git",
      ".gitignore",
      "node_modules",
      "package.json",
      "package-lock.json",
      "web-ext-artifacts",
      "*.md",
      ".web-ext-config.js"
    ]
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "zx": "^8.8.5"
  }
}
